{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-sm-10 col-sm-offset-1">
        {% if post.image %}
            <div class="col-sm-8 col-sm-offset-2">
                <img src="{{ vich_uploader_asset(post.image, 'imageFile') }}" width="100%"
                     alt="{{ post.image.imageName }}">
            </div>
        {% endif %}
        <div class="col-sm-8">
            <h1>{{ post.title }}</h1>
            <p>{{ post.description }}</p>
        </div>
    </div>

    <div class="col-sm-12">
        <hr>
    </div>

    <div class="col-sm-8 col-sm-offset-2">
        <p>{{ post.content }}</p>
    </div>
{% endblock %}

{% block title %}

{% endblock %}

