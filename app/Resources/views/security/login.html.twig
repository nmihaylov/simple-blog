{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="well col-sm-6 col-sm-offset-3">
        {% if error %}
            <div class="alert alert-dismissible alert-danger">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>{{ error.messageKey|trans(error.messageData) }}</strong>
            </div>
        {% endif %}
        <legend>Login</legend>
        <form method="post" action="{{ path('security_login') }}">
            <div class="form-group">
                <label class="control-label required" for="_username"> Username </label>
                <input class="form-control" id="_username" maxlength="255" name="_username" required="required"
                       type="email"/>
            </div>
            <div class="form-group">
                <label class="control-label required" for="_password"> Password </label>
                <input class="form-control" id="_password" maxlength="255" name="_password" required="required"
                       type="password"/>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

            <div class="form-group">
                <button class="btn btn-primary submit-btn" type="submit">
                    Login
                </button>
            </div>
        </form>
    </div>


